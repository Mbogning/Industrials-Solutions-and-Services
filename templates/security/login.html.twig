{% extends 'base.html.twig' %}

{% block title %}
    Login
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <section class="login-area ptb-100">
      <div class="container">
        <div class="login-form">
          <div class="sign-in-title">
            <div class="navbar-header">
                        <a href="" class="navbar-brand">
                            <img src="{{asset('assets/images/logo.jpg')}}" class="bg-img img-responsive" title="Les Pachas" style="width: 350px; height: 200px;">
                        </a>
            </div>
          </div>
          <form>
            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                  <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" autofocus required />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <input type="password" class="form-control" placeholder="Password" name="password" id="inputPassword" required />
                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-check">
                  <input
                    type="checkbox"
                    class="form-check-input"
                    id="checkme"
                  />
                  <label class="form-check-label" for="checkme"
                    >Garder sa session active</label
                  >
                </div>
              </div>
              <div class="col-lg-12 text-right">
                <p class="forgot-password"><a href="#">Mot de passe oubli√©?</a></p>
              </div>
              <div class="col-lg-12">
                <div class="send-btn">
                  <button type="submit" class="default-btn">
                    Valider
                    <span></span>
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

</form>
{% endblock %}
