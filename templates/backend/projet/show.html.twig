{% extends "backend/adminTemplate.html.twig" %}

{% block title %}
    Projet | Détails    
{% endblock %}

{% block body %}
    <h2>  Détails d'un projet </h2>
    <div id="page-content">
        <div class="col-sm-6 eq-box-sm">
   
            <div class="panel-heading">
                <div class="panel-control">
                    <a class="btn btn-info" href="{{ path('projet_index') }}" title="Retour à la liste"><i class="fa fa-chevron-left"></i></a>
                    
                </div>
            </div>
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ projet.titre }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ projet.description |raw }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ projet.slug }}</td>
                    </tr>
                    <tr>
                        <th>Lieu</th>
                        <td>{{ projet.lieu }}</td>
                    </tr>
                    <tr>
                        <th>Site web</th>
                        <td>{{ projet.siteWeb }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><img src="{{ asset('/images/projets/') }}{{ projet.image }}"
                                        alt="{{ projet.image }}"
                                        width="50"
                                        height="50" />
                        </td>
                    </tr>
                    <tr>
                        <th>Date début</th>
                        <td>{{ projet.debutProjet ? projet.debutProjet|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date fin</th>
                        <td>{{ projet.finProjet ? projet.finProjet|date('Y-m-d') : '' }}</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>

{% endblock %}