<div class="panel-body">
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <br>
            {%if service.image!=null%}
                <div class="row">
                    <span>Image:</span>
                    <img src="{{asset('images/services/')}}{{service.image}}" style="width:100px;height: 80px" class="img" alt="Aucune image">
                        <a class="btn btn-danger" title="supprimer" href="{{ path('service_delete', { 'id': service.id }) }}"><i class="fa fa-close"></i></a>
                </div>
            {% endif %}
        <br>

            <div class=" text-center">
                    <button class="btn btn-info">{{ button_label|default('Enregistrer')}}</button>
            </div>
    {{ form_end(form) }}
</div>
