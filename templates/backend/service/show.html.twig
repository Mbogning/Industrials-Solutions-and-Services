{% extends 'backend/adminTemplate.html.twig' %}

{% block title %}Service | Détails {% endblock %}

{% block body %}
    <h2>Détails d'un service</h2>
    <div id="page-content">
        <div class="col-sm-6 eq-box-sm">
   
            <div class="panel-heading">
                <div class="panel-control">
                    <a class="btn btn-info" href="{{ path('service_index') }}" title="Retour à la liste"><i class="fa fa-chevron-left"></i></a>
                    
                </div>
            </div>

            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <th>Titre</th>
                        <td>{{ service.titre }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ service.description |raw }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ service.slug }}</td>
                    </tr>
                    <tr>
                        <th>Pdf</th>
                        <td>{{ service.pdfFile }}</td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td><img src="{{ asset('/images/services/')}}{{ service.image }}"
                                            alt="{{ service.image }}"
                                            width="50"
                                            height="50"
                        </td>
                    </tr>

                </tbody>
            </table>
{% endblock %}
